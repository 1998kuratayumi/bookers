<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
    　<th><%= book.title %></th>
    　<th><%= book.body %></th>
    　<th><%= link_to "Show", book_path(book.id) %></th>
    　<th><%= link_to "Edit", edit_book_path(book.id) %></th>
    　<th><%= link_to "Destroy", destroy_book_path(book.id), method: :delete %></th>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

 <%= form_with model: @book, url:'/books', local:true do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
 <% end %>
 
 <h3>Title</h3>
  <%= f.text_field :title %>
  <h3>Body</h3>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
 <% end %>
